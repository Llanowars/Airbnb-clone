<div class="wrapper-form-blue">
  <div class="container">
    <%= simple_form_for(@space) do |space| %>
      <%= space.error_notification %>
      <div class="row bot-marged">
          <h3>Your workplace informations</h3>
        <div class="col-xs-12 col-sm-8 col-lg-6 padded-vertical">
          <%= space.input :name, class: "field-big"%><br>
        </div>
      </div>
      <div class="row form-inline">
        <h3>Services</h3>
        <div class="col-xs-12 col-sm-4 col-md-4 padded-vertical">
          <%= space.input :has_wifi, as: :radio_buttons %>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-4 padded-vertical">
          <%= space.input :has_drink, as: :radio_buttons %>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-4 padded-vertical">
          <%= space.input :has_food, as: :radio_buttons, type: "radio", autocomplete: "off" %>
        </div>
      </div>
      <div class="row bot-marged">
        <div class="col-xs-12 col-sm-10 col-lg-8 padded-vertical">
          <label for="">Description</label>
          <p class="form-instruction">Tell your future guests more about your workplace: are there restaurants nearby, a place to take a nap, do you organize events... ? Feel free to add any information that could help freelancers imagine how your workplace is !</p>
          <%= space.input :description, label: false %>
        </div>
      </div>
      <div class="row bot-marged">
        <h3>Reaching you</h3>
        <div class="col-xs-12 col-sm-8 col-lg-6 padded-vertical">
          <%= space.input :address, class: "field-big" %><br>
        </div>
        <div class="col-xs-6 col-sm-4 col-lg-4 padded-vertical">
          <%= space.input :phone_number %><br>
        </div>
      </div>
      <div class="row">
       <h3>Pricing and availability</h3>
       <div class="col-xs-6 col-sm-3 col-md-4 padded-vertical">
        <%= space.input :daily_price, class: "field-big " %><br>
       </div>
       <div class="col-xs-6 col-sm-3 col-md-4 padded-vertical">
        <%= space.input :weekly_price, class: "field-big" %>
       </div>
     </div>
     <div class="row  bot-marged padded-vertical">
       <div class="col-xs-6 col-sm-3 col-md-3">
        <%= space.input :max_people, class: "field-big" %><br>
       </div>
     </div>
     <div class="row padded-vertical">
      <%= space.submit class: "btn-primary"%>
     </div>
    <% end %>
  </div>
</div>

<div class="btn-group" data-toggle="buttons">
  <label class="btn btn-primary active">
    <input type="radio" name="options" id="option1" autocomplete="off" checked> Radio 1 (preselected)
  </label>
  <label class="btn btn-primary">
    <input type="radio" name="options" id="option2" autocomplete="off"> Radio 2
  </label>
  <label class="btn btn-primary">
    <input type="radio" name="options" id="option3" autocomplete="off"> Radio 3
  </label>
</div>



