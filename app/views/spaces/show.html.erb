<div class="banner-space" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path('banner.jpg') %>');">
</div>
<div class="wrapper-blue">
  <div class="container">
    <div class="row">
      <div class="col-xs-6 col-md-6 col-lg-9">
        <h2 class="row form-inline first-top-marged row bot-marged">About this place</h2>

        <div class="row form-inline first-top-marged row bot-marged">
        <h3>Description</h3>
        <%= @space.description %>
        </div>

        <div class="row form-inline first-top-marged row bot-marged">
        <h3>Address</h3>
        <%= @space.address%>
        </div>
      </div>
        <!-- <p><%= @space.lng%></p>
        <p><%= @space.lat%></p> -->


      <div class="col-xs-4 col-md-6 col-lg-3">
        <div class="book-it js-book-it">
          <div class="book-it__container js-book-it-container fixed" style="top: 40px;">
            <h3 class="text-center"><%= @space.daily_price %>/day
          </h3>
          </div>
        </div>
        <div class="panel book-it-panel">
          <div class= "panel-body panel-light">
            <button type="submit" class="btn btn-primary btn-large btn-block"<span data-reactid=".wj35yhzrpc.1.0.0.1.1.1">Réservation instantanée</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<div id="map" class="map-space"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(function(){
      handler = Gmaps.build('Google');
      handler.buildMap({ internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });
    })
  <% end %>
<% end %>



