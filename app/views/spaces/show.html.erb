<div class="banner-space" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path('banner.jpg') %>');">
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-lg-8">
      <h1><%= @space.name %></h1>
      <p>Wifi: <%= @space.has_wifi ? "Yes" : "No" %> </p>
      <p>Drinks: <%= @space.has_wifi ? "Yes" : "No" %> </p>
      <p>Food: <%= @space.has_wifi ? "Yes" : "No" %> </p>
      <p><%= @space.description %></p>
      <p><%= @space.address%></p>
      <p><%= @space.latitude%></p>
      <p><%= @space.longitude%></p>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
      <h1><%= @space.daily_price %>/ day</h1>
    </div>
  </div>
</div>

<div id="map" class="map-space"></div>


<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(function(){
      handler = Gmaps.build('Google');
      handler.buildMap({ internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });
    })
  <% end %>
<% end %>
