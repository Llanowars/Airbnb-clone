<div class="banner-space" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path('banner.jpg') %>');">
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-lg-8">
      <h1><%= @space.name %></h1>
      <p>Wifi: <%= @space.has_wifi ? "Yes" : "No" %> </p>
      <p>Drinks: <%= @space.has_wifi ? "Yes" : "No" %> </p>
      <p>Food: <%= @space.has_wifi ? "Yes" : "No" %> </p>
      <p><%= @space.description %></p>
      <p><%= @space.address%></p>
      <p><%= @space.lng%></p>
      <p><%= @space.lat%></p>
  </div>
  <div class="col-xs-12 col-md-6 col-lg-4">
    <h1><%= @space.daily_price %>/ day</h1>
  </div>
</div>


</div>








<div id="map"></div>

<script src="https://maps.google.com/maps/api/js?sensor=false"></script>
    <script src="https://cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>

    <!-- Require jQuery and Google map For rails javascript lib -->
    <script src="https://wagon-google-maps-markers.herokuapp.com/assets/application-5034196864c74ae1cc5f12e6d1f71223.js" type="text/javascript"></script>

    <script type="text/javascript">
      var map = new google.maps.Map(document.getElementById('map'), {
      center: { lat: <%= @space.lat %>, lng: <%= @space.lat %>  },
      zoom: 14  // Change this value from 0 to 18
    });
    var marker = new google.maps.Marker({
      map: map,
      position: { lat: <%= @space.lat %>, lng: <%= @space.lat %>   }
    });


</script>
