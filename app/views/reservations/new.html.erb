<div class="wrapper-blue-light">
  <div class="container">
    <%= simple_form_for([ @space, @reservation ]) do |reservation| %>
      <%= reservation.error_notification %>

      <div class="row form-inline first-top-marged row bot-marged">
        <h3>Space informations</h3>
          <hr data-reactid=".1vh31zxwbnk.0.0.0.0.3.5">
          <h5><%= @space.name %></h5>
          <h5><%= @space.address %></h5>
          <h5><%= @space.daily_price %>â‚¬</h5>
          <h5><%= @space.description %></h5>
      </div>

      <div class="row bot-marged">
          <h3>Reservation dates</h3>
          <hr data-reactid=".1vh31zxwbnk.0.0.0.0.3.5">
          <% params[:start_at] %>
          <% params[:end_at] %>
        <div class="col-xs-12 col-sm-8 col-lg-6 padded-vertical">
        <div class="col-sm-10">
            <div class="input-daterange input-group" id="datepicker">
              <input type="text" class="input-sm form-control" name="reservation['start_at']" placeholder="<%= params[:start_at] ? "Today" : params[:start_at]%>" value="<%= params[:start_at] ? Date.today : params[:start_at]%>"/>
              <span class="input-group-addon">to</span>
              <input type="text" class="input-sm form-control" name="reservation['end_at']" placeholder="<%= params[:end_at] ? "Today" : params[:end_at]%>" value="<%= params[:start_at] ? Date.today : params[:start_at]%>"/>
            </div>
          </div>
        </div>
      </div>

      <div class="row row bot-marged">
       <h3>Price</h3>
       <hr data-reactid=".1vh31zxwbnk.0.0.0.0.3.5">
       <div class="col-xs-6 col-sm-3 col-md-4 padded-vertical">
        <h5><%= @space.daily_price %></h5>
       </div>
     </div>

     <div class="row row bot-marged">
       <h3>Payment</h3>

       <div class="col-xs-6 col-sm-3 col-md-4 padded-vertical">

       </div>
     </div>

     <div class="row padded-vertical bot-marged">
      <%= reservation.submit "Submit", class: "btn-primary" %>
     </div>
    <% end %>
  </div>
</div>
