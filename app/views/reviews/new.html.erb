<div class="wrapper-pink header">
  <div class="container text-center">
    <h2><%=User.all.size%> freelancers in Paris are ready to discover your workplace, add it now !  </h2>
  </div>
</div>
<div class="wrapper-blue-light">
  <div class="container">
    <%= simple_form_for([@space, @review]) do |review| %>
      <%= review.error_notification %>
      <div class="row bot-marged first-top-marged bot-marged">
          <h3>Review</h3>
        <div class="col-xs-12 col-sm-8 col-lg-6 padded-vertical">
          <%= review.input :comment, class: "field-big review_comment"%>
        </div>
      </div>
      <div class="row bot-marged">
          <h3>Rating</h3>
        <div class="col-xs-12 col-sm-8 col-lg-6 padded-vertical">
          <%= review.input :rating, collection: 1..5, class: "field-big"%>
        </div>
      </div>
     <div class="row padded-vertical">
      <%= review.submit class: "btn-primary"%>
     </div>
    <% end %>
  </div>
</div>


