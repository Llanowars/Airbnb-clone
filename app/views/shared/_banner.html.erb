<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path('banner.jpg') %>');">

  <div class="banner-content">
    <h1>Building communities to innovate together</h1>
    <p>Find the space you need to create your life's work.</p>
    <div class="search">

      <form action="/spaces" method="get" class="form-inline">
        <div class="form-group">
          <label for="">Work near</label>
          <input type="text" class="form-control input-lg" name="address" placeholder="Paris" id="location" >
        </div>
        <div class="input-daterange input-group form-group banner-search" id="datepicker">
          <input type="text" class="input-sm form-control " name="start_at" placeholder=" Today" />
          <span class="input-group-addon">to</span>
          <input type="text" class="input-sm form-control form-inline" name="end_at" placeholder="End Date" />
        </div>
        <input class= "btn btn-primary btn-lg" type="submit" value="Search" />
      </form>
    </div>
  </div>
</div>
