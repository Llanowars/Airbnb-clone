<div class="box box-info">
    <h3 class="text-center">Reservations for <%= current_user.email %></h3>


  <div class="container">
    <div class="col-xs-12 col-sm-12">
      <table class="table no-margin">
        <thead>
        <tr>
          <th>Location</th>
          <th>Address</th>
          <th>Dates</th>
          <th>Confirmation</th>
        </tr>
        </thead>
        <tbody>

        <% @reservations.each do  |reservation| %>

        <tr>
          <td><a href="pages/examples/invoice.html"><%= reservation.space.name %></a></td>
          <td><%= reservation.space.address%></td>
          <td><%= reservation.start_at %> to <%= reservation.end_at %></td>
          <td><span class="label label-success">Confirmed</span></td>
          <td>
            <div class="sparkbar" data-color="#00a65a" data-height="20"><canvas width="34" height="20" style="display: inline-block; width: 34px; height: 20px; vertical-align: top;"></canvas></div>
          </td>
        </tr>

      <% end %>


        </tbody>
      </table>
    </div>
  </div>
</div>
